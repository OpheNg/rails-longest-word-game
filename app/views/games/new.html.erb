
<div class="container">
    <h1>LETTERS</h1>

    <h3>Make the longest word !</h3>

  <div class="letters">
    <% @letters.each do |letter|%>
      <div class="single"><%= letter %></div>
    <% end %>
  </div>

  <div class="answer">
    <form action="/score" method="post">
      <input type="text"name="letters" placeholder="type here">
      <input type="submit"value="Play">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>
